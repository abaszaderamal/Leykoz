@model InfoSlidePostVM
<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Form Validation</h4>
                        <div class="page-title-right">
                            <ol class="breadcrumb p-0 m-0">
                                <li class="breadcrumb-item">
                                    <a href="#">Velonic</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#">Forms</a>
                                </li>
                                <li class="breadcrumb-item active">Form Validation</li>
                            </ol>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title mb-4">Uşaqlar</h4>
                            @* <div class="alert-danger"  asp-validation-summary="All"  ></div> *@
                            <form class="parsley-examples" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label asp-for="FirstName">Adı<span class="text-danger">*</span></label>
                                    <input asp-for="FirstName" parsley-trigger="change" required placeholder="Enter name" class="form-control">
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LastName">Soyadı<span class="text-danger">*</span></label>
                                    <input asp-for="LastName" parsley-trigger="change" required placeholder="Enter LastName " class="form-control">
                                    <span class="text-danger" asp-validation-for="LastName"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Title">Başlıq<span class="text-danger">*</span></label>
                                    <input asp-for="Title" parsley-trigger="change" required placeholder="Enter Title " class="form-control">
                                    <span class="text-danger" asp-validation-for="Title"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Contetnt">Məzmun<span class="text-danger">*</span></label>
                                    @* <input asp-for="Contetnt" parsley-trigger="change" required placeholder="Enter Contetnt " class="form-control"> *@
                                    <textarea  asp-for="Contetnt"  id="News_Body1"></textarea>
                                    <span class="text-danger" asp-validation-for="Contetnt"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="MsgTitleContetnt">Mesaj Başlıqı<span class="text-danger">*</span></label>
                                    <input asp-for="MsgTitleContetnt" parsley-trigger="change" required placeholder="Enter Title " class="form-control">
                                    <span class="text-danger" asp-validation-for="MsgTitleContetnt"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="MsgContetnt">Mesajın Məzmunu<span class="text-danger">*</span></label>
                                    @* <input asp-for="MsgContetnt" parsley-trigger="change" required placeholder="Enter PMsgContetnt" class="form-control"> *@
                                    <textarea  asp-for="MsgContetnt"  id="News_Body2"></textarea>

                                    <span class="text-danger" asp-validation-for="MsgContetnt"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="ImageFile">Şəkil <span class="text-danger">*</span> </label>
                                    <input asp-for="ImageFile" parsley-trigger="change" accept="image/*" required placeholder="Enter Product img" class="form-control">
                                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                                </div>
                                <div class="form-group text-right mb-0">
                                    <button class="btn btn-primary waves-effect waves-light mr-1" type="submit">
                                        Əlavə et
                                    </button>
                                    <a  asp-action="Index" type="reset" class="btn btn-secondary waves-effect waves-light">
                                        Əvvəlki səhifəyə qayit
                                    </a>
                                </div>
                                @* <input hidden="hidden" asp-for="ProductCategories" value="@Model.ProductCategories"> *@


                            </form>
                        </div>
                    </div>
                    <!-- end card -->
                </div>
                <!-- end col -->

            </div>

        </div>
        <!-- end container-fluid -->

    </div>
    <!-- end content -->


</div>

<script src="https://cdn.ckeditor.com/ckeditor5/22.0.0/classic/ckeditor.js"></script>

<script>
 ClassicEditor
 	.create( document.querySelector( '#News_Body1' ), {
 		ckfinder: {
 			uploadUrl: '/UploadCk/UploadImage',
 		}
 
 	} )
 	.catch( error => {
 		console.error( error );
 	} );
 
 ClassicEditor
  	.create( document.querySelector( '#News_Body2' ), {
  		ckfinder: {
  			uploadUrl: '/UploadCk/UploadImage',
  		}
  
  	} )
  	.catch( error => {
  		console.error( error );
  	} );
        
</script>}