@model TargetVM
<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Form Validation</h4>
                        <div class="page-title-right">
                            <ol class="breadcrumb p-0 m-0">
                                <li class="breadcrumb-item">
                                    <a href="#">Velonic</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#">Forms</a>
                                </li>
                                <li class="breadcrumb-item active">Yenilə</li>
                            </ol>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title mb-4">Hədəflər</h4>
                            @* <div class="alert-danger"  asp-validation-summary="All"  ></div> *@
                            <form class="parsley-examples" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label asp-for="Content">
                                        Hədəf
                                        <span class="text-danger">
                                            * <span asp-validation-for="Content" class="text-danger"></span>
                                        </span>
                                    </label>
                                    <textarea  asp-for="Content"  value="@Model.Content"  id="News_Body"></textarea>
                                </div>
                                <div class="form-group text-right mb-0">
                                    <button class="btn btn-primary waves-effect waves-light mr-1" type="submit">
                                        Dəyişikliyi yadda saxla
                                    </button>
                                    <a  asp-action="Index" type="reset" class="btn btn-secondary waves-effect waves-light">
                                        Əvvəlki səhifəyə qayit
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- end card -->
                </div>
                <!-- end col -->

            </div>

        </div>
        <!-- end container-fluid -->

    </div>
    <!-- end content -->


    

</div>

