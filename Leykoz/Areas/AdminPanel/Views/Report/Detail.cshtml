@model List<ReportAmount>
@{
    int count = 1;
}
<!-- ============================================================== -->
<!-- Start Page Content here -->
<!-- ============================================================== -->

<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body table-responsive">
                            <h4 class="m-t-0 header-title mb-4">
                                <b>Hesabatlar</b>
                            </h4>
                            @* <a class="btn btn-info waves-effect width-md waves-light my-2 " asp-action="Create" style="color:#ffffff  ">Əlavə et</a> *@
                            <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                <tr>
                                    <th>№</th>
                                    <th>Məbləğ</th>
                                    <th>Tarixi</th>
                                    <th>Parametrlər</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var reportAmount in Model.Where(p => p.IsDeleted == false))
                                {
                                    <tr>
                                        <td>@count </td>

                                        <td>
                                            @reportAmount.Amount
                                        </td>
                                        <td>
                                            @reportAmount.CreatedAt
                                        </td>
                                        <td>
                                            <a class="btn btn-icon waves-effect waves-light btn-danger my-1" asp-action="DeleteAmount" asp-route-id="@reportAmount.Id">
                                                <i class="mdi mdi-delete-outline"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    count++;
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- end container-fluid -->

    </div>
    <!-- end content -->


</div>

<!-- ============================================================== -->
<!-- End Page content -->
<!-- ============================================================== -->