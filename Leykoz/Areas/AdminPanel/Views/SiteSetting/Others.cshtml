@model Leykoz.Business.Validators.Setting.otherVM
<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Form Validation</h4>
                        <div class="page-title-right">
                            <ol class="breadcrumb p-0 m-0">
                                <li class="breadcrumb-item">
                                    <a href="#">Velonic</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#">Forms</a>
                                </li>
                                <li class="breadcrumb-item active">Form Validation</li>
                            </ol>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title mb-4">Basic Form</h4>
                            @* <div class="alert-danger"  asp-validation-summary="All"  ></div> *@
                            <form class="parsley-examples" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label asp-for="Address">
                                        Address
                                        <span class="text-danger">
                                            * <span asp-validation-for="Address" class="text-danger"></span>
                                        </span>
                                    </label>
                                    <input asp-for="Address" value="@Model.Address" parsley-trigger="change" required class="form-control">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Phone">
                                        Tel
                                        <span class="text-danger">
                                            * <span asp-validation-for="Phone" class="text-danger"></span>
                                        </span>
                                    </label>
                                    <input asp-for="Phone" value="@Model.Phone" parsley-trigger="change" required class="form-control">
                                </div>
                                <div class="form-group">
                                    <label asp-for="FooterTxt">Footer Txt<span class="text-danger">*</span></label>
                                    <textarea  asp-for="FooterTxt"  id="News_Body2"></textarea>
                                    <span class="text-danger" asp-validation-for="FooterTxt"></span>
                                </div>
                                <button type="submit" class="btn btn-success waves-effect width-md waves-light">Save</button>
                            </form>
                        </div>
                    </div>
                    <!-- end card -->
                </div>
                <!-- end col -->

            </div>

        </div>
        <!-- end container-fluid -->

    </div>
    <!-- end content -->


</div><script src="https://cdn.ckeditor.com/ckeditor5/22.0.0/classic/ckeditor.js"></script>

<script>
 
 ClassicEditor
  	.create( document.querySelector( '#News_Body2' ), {
  		ckfinder: {
  			uploadUrl: '/UploadCk/UploadImage',
  		}
  
  	} )
  	.catch( error => {
  		console.error( error );
  	} );
        
</script>